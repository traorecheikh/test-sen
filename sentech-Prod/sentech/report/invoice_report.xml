<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="invoice_report_sentech_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//h2" position="after">
                 <div style="padding-top:20px; padding-bottom:20px;">
                    <p><span><strong>Libellé: </strong></span><span t-field="o.libelle"/></p>                    
                </div>
            </xpath>
        <xpath expr="//p[@name='comment']" position="after">
                <div class="row">
                    <div class="col">
                        <p class="text-right"><strong>La Direction Générale de SENTECH </strong></p>
                    </div>                    
                </div>
            </xpath>
        
    </template>
</odoo>